{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Simple",
      "program": "${workspaceFolder}/src/index.js"
      // "args" : [
      //     "-p", "6060"
      // ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "barebones",
      "program": "${workspaceFolder}/src/index.js"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "launch with tsduck",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-s", "tsduck"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["--timeout", "999999", "--colors", "${workspaceFolder}/test"],
      "internalConsoleOptions": "openOnSessionStart"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests (Middleware)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-g",
        "http"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests (ffmpeg)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-g",
        "#ffmpeg"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests (checkPollServer)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-g",
        "#checkPollServer"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests (server)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-g",
        "server"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests (should check the poll server and not process if off)",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-g",
        "should check the poll server and not process if off"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "ffmpeg Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-f", "-d", "tmp"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hls Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-h", "-o", "-d", "tmp"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hls Mode with logFormat",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-h", "-o", "-d", "tmp", "--logFormat", "logs/${YYYY-MM-DD}.log"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "hls Mode doing delete and cleanup",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-h"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Poll Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-t", "5", "-p", "6060", "-u", "http://localhost:9090"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Poll Mode with Ffmpeg Start",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-t", "5", "-u", "http://localhost:9090/ffmpeg"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Poll Mode with Ffmpeg Start and System Information",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-t", "5", "-u", "http://localhost:8080/all.json", "--systemInformation"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "https -w Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-w", "-e"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "vlc Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-v", "-d", "tmp"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ws Mode with ffmpeg args",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-w", "-f", "--ffmpegExtras", "-bsf:a aac_adtstoasc"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ws Mode",
      "program": "${workspaceFolder}/src/index.js",
      "args": ["-w", "-f"]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9229
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.js"
    }
  ]
}
